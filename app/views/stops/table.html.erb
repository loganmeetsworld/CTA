<div class="col-md-5 col-md-offset-6">
  <div class="title">
    <section id="search" class="search">
    <h2>Stop Search<br><small>Search for Chicago Bus Stops in October 2012.</small></h2>
    </section>
  </div>
  <h4><span id="found" class="label label-default"></span></h4>
  <table id="stream_table" class='table table-striped table-bordered table-condensed'>
    <thead>
      <tr>
        <th>Stop ID</th>
        <th>On Street</th>        
        <th>Cross Street</th>
        <th>Boardings</th>
        <th>Alightings</th>
      </tr>
    </thead>
    <tbody>
    </tbody>
  </table>
  <div id="summary"></div>
</div>

<script id="template" type="text/html">
  <tr>
    <td>{{record.stop_id}}</td>
    <td>{{record.on_street}}</td>
    <td>{{record.cross_street}}</td>
    <td>{{record.boardings}}</td>
    <td>{{record.alightings}}</td>
    <!-- data-sort="number:desc" -->
  </tr>
</script>